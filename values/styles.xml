<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#097CC7</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="loginTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">#1B476A</item>
        <item name="colorPrimaryDark">#1B476A</item>
        <item name="colorAccent">@color/colour_white</item>
        <item name="actionBarTabStyle">@style/login_action_bar_tab_style</item>
        <item name="actionBarSize">150dp</item>
    </style>

    <style name="login_action_bar_tab_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/tab_colour_selector</item>
        <item name="background">@drawable/tab_colour_selector</item>
        <item name="android:backgroundStacked">@drawable/tab_colour_selector</item>
        <item name="backgroundStacked">@drawable/tab_colour_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colour_white</item>
    </style>

    <style name="AppTheme.PopUpTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
