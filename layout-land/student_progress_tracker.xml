<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:animateLayoutChanges="true">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/team_tracker_teams"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        class="team5project.treasurehuntapp.TeamTrackerTeamsFragment"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id="@+id/student_progress_tracker_container">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/team_tracker_button_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#E51837">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
